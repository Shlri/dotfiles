;; OSD только на главном мониторе
(defwindow osd-volume
  :monitor 0
  :geometry (geometry
    :x "0%"
    :y "10%"
    :width "300px"
    :height "80px"
    :anchor "top center")
  :stacking "overlay"
  :focusable false
  (osd-volume))

(defwindow osd-brightness
  :monitor 0
  :geometry (geometry
    :x "0%"
    :y "10%"
    :width "300px"
    :height "80px"
    :anchor "top center")
  :stacking "overlay"
  :focusable false
  (osd-brightness))
